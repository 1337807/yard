<% if object.has_tag?(:example) %>
  <% if object.tags(:example).size == 1 %>
    <% tag = object.tag(:example) %>
    <h3>Example<%= tag.name ? " " + htmlify_line(tag.name) : "" %>:</h3>
    <pre class="example code"><%= html_syntax_highlight(tag.text) %></pre>
  <% else %>
    <div class="examples">
      <h3>Examples:</h3>
      <% object.tags(:example).each do |tag| %>
        <h4><%= htmlify_line(tag.name) %></h4>
        <pre class="example code"><%= html_syntax_highlight(tag.text) %></pre>
      <% end %>
    </div>
  <% end %>
<% end %>