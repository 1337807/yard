<%= object.type %> <%= h object.name %>
<% if show_full_info? -%>
|
<% object.namespace.attributes.each do |scope, list| -%>
<% list.each do |name, rw| -%>
<%= scope == :class ? '+' : '-' %> <%= h name %> [<%= 'R' if rw[:read] %><%= 'W' if rw[:write] %>]\l
<% end -%>
<% end -%>
|
<% method_list(object).each do |obj| %>
<%= obj.scope == :class ? '+' : '-' %> <%= h obj.name %>
<%= h(" : #{obj.tag(:return).types.first}") if obj.has_tag?(:return) && obj.tag(:return).types.size > 0 %>\l
<% end -%>
<% end -%>