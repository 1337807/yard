<% if object.tags(:example).size == 1 %>
<% tag = object.tag(:example) %>
<% title = "Example#{tag.name ? " " + tag.name : ""}" %>
<%= title %>:
<%= hr(title.length) %>-

      <%= format_source tag.text %>
<% elsif object.has_tag?(:example) %>
  - Examples:
<% object.tags(:example).each do |tag| %>
      <%= tag.name %>
      <%= tag.text %>
<% end %>

<% end %>
