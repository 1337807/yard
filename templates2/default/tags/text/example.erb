<% if object.has_tag?(:example) %>
<% if object.tags(:example).size == 1 %>
> Example: <%= object.tag(:example).name %>
<%= object.tag(:example).text.gsub(/^/, '  ') %>
<% else %>
> Examples:
<% object.tags(:example).each do |tag| %>
<%= "  [" + tag.name + "]" if tag.name %>
<%= tag.text.gsub(/^/, '  ') %>
<% end %>
<% end %>
<% end %>


