<% n = 1 %>
<dl class="box">
  <% if CodeObjects::ClassObject === object %>
    <dt class="r<%=n%>">Inherits:</dt>
    <dd class="r<%=n%>">
      <span class="inheritName"><%= linkify object.superclass %></span>
      <% if object.superclass.name != :Object %>
        <ul class="fullTree">
          <li>Object</li>
          <ul>
            <% object.inheritance_tree.reverse.each do |obj| %>
              <li><%= obj == object ? obj.path : linkify(obj) %></li><ul>
            <% end %>
            <%= "</ul>" * object.inheritance_tree.size %>
          </ul>
        </ul>
        <a href="#" class="inheritanceTree">show all</a>
      <% end %>
      </dd>
    <% n = 2 %>
  <% end %>
  <% {:class => "Extends", :instance => "Includes"}.each do |scope, name| %>
    <% if (mix = object.mixins(scope)).size > 0 %>
      <dt class="r<%=n%>"><%= name %>:</dt>
      <dd class="r<%=n%>"><%= mix.map {|o| linkify(o) }.join(", ") %></dd>
      <% n = n == 2 ? 1 : 2 %>
    <% end %>
  <% end %>
  <% unless object == Registry.root %>
    <dt class="r<%=n%> last">Defined in:</dt>
    <dd class="r<%=n%> last"><%= erb(:defines) %></dd>
  <% end %>
</dl>
<div class="clear"></div>

